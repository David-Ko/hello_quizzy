<%# open to changing this title%>
<h4>This Question is Part of This Quiz: <%= @question.quiz.name %></h4>

<h4>Question: <%= @question.body %> </h4>
<%= link_to 'Edit Question', edit_question_path(@question.id), class: "btn-sm btn-info" %>
<%= link_to 'Back', quiz_path(@question.quiz), class: "btn-sm btn-danger" %>
<%= link_to 'Add an Answer', new_question_answer_path(@question.id), class: "btn-sm btn-danger" %>
<br>
<div>
  <% @answers.each do |answer| %>
      <div>
        <p>
          <%= answer.body %>
          <% if answer.correct == true%> <p>(This is the correct answer)</p> <%end%>
          <br>
          <%= link_to 'Edit Answer', edit_answer_path(answer.id), class: "badge badge-warning"%>
          <%= link_to 'Delete Answer', answer_path(answer.id), method: :delete, data: {confirm: "Are you sure?"}, class: "badge badge-danger"%>
        </p>
      </div>
  <% end %>
</div>


