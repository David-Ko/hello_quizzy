     <b>Question: <%=question.body%></b><br>
       <% question.answers.each do |answer|%>
          <p><span>
          <%= radio_button_tag(question.id, answer.id, false)%>
          <label for=<%=answer.id%>><%=answer.body%></label>
          </span></p>
        <% end %>
    </div>
  <% end %>

